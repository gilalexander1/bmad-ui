{
  "name": "bmad-ui",
  "version": "2.0.0",
  "description": "Enhanced BMAD UI - A cosmic-themed frontend for the BMAD agent methodology",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "backend-dev": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "full-dev": "concurrently \"npm run dev\" \"npm run backend-dev\"",
    "install-backend": "cd backend && pip install -r requirements.txt"
  },
  "dependencies": {
    "next": "15.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/node": "^20.17.6",
    "tailwindcss": "^3.4.15",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.2",
    "framer-motion": "^11.11.17",
    "lucide-react": "^0.468.0",
    "react-hot-toast": "^2.4.1",
    "socket.io-client": "^4.8.1",
    "zustand": "^5.0.2",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "react-hook-form": "^7.54.2",
    "@hookform/resolvers": "^3.9.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-next": "15.4.6",
    "concurrently": "^9.1.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/uuid": "^10.0.0",
    "uuid": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}